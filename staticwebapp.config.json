{
  "routes": [
    {
      "route": "/.auth/login/*",
      "allowedRoles": ["anonymous"]
    },
    {
      "route": "/.auth/logout",
      "allowedRoles": ["anonymous", "authenticated"]
    },
    {
      "route": "/api/people",
      "methods": ["POST"],
      "allowedRoles": ["authenticated"]
    },
    {
      "route": "/api/people/*",
      "methods": ["PUT", "DELETE"],
      "allowedRoles": ["authenticated"]
    },
    {
      "route": "/api/events",
      "methods": ["POST"],
      "allowedRoles": ["authenticated"]
    },
    {
      "route": "/api/events/*",
      "methods": ["PUT", "DELETE"],
      "allowedRoles": ["authenticated"]
    },
    {
      "route": "/api/media/*",
      "methods": ["PUT", "DELETE"],
      "allowedRoles": ["authenticated"]
    },
    {
      "route": "/api/upload",
      "methods": ["POST"],
      "allowedRoles": ["authenticated"]
    },
    {
      "route": "/api/*",
      "methods": ["GET"],
      "allowedRoles": ["authenticated"]
    },
    {
      "route": "/*",
      "allowedRoles": ["authenticated"]
    }
  ],
  "auth": {
    "identityProviders": {
      "azureActiveDirectory": {
        "registration": {
          "openIdIssuer": "https://login.microsoftonline.com/common/v2.0"
        }
      }
    }
  },
  "navigationFallback": {
    "rewrite": "/index.html",
    "exclude": ["/images/*.{png,jpg,gif}", "/css/*", "/api/*"]
  },
  "responseOverrides": {
    "401": {
      "redirect": "/.auth/login/aad",
      "statusCode": 302
    }
  },
  "globalHeaders": {
    "content-security-policy": "default-src 'self' https://*.blob.core.windows.net; script-src 'self' 'unsafe-inline' 'unsafe-eval'; style-src 'self' 'unsafe-inline';"
  },
  "mimeTypes": {
    ".json": "application/json",
    ".js": "text/javascript",
    ".css": "text/css",
    ".html": "text/html",
    ".jpg": "image/jpeg",
    ".png": "image/png",
    ".gif": "image/gif",
    ".svg": "image/svg+xml",
    ".mp4": "video/mp4"
  },
  "platform": {
    "apiRuntime": "node:18"
  }
}
